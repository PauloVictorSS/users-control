<%- include("includes/head.ejs") %>

    <link rel="stylesheet" href="/css/add-user.css">
    <%- include("includes/navbar.ejs") %>

    <section id="content">
        <h1>Editar usuário</h1>
        <form action="/editing-user/<%= userInfos.id %>" method="POST" id="add-users-form">
            <div class="block-label-input">
                <label for="name">Nome:</label>
                <input type="text" value="<%= userInfos.name %>" name="name" id="name"/>
            </div>
            <div class="block-label-input">
                <label for="email">Email:</label>
                <input type="text" value="<%= userInfos.email %>" name="email" id="email"/>
            </div>
            <div class="block-label-input">
                <label for="description">Descrição:</label>
                <textarea name="description" id="description"><%= userInfos.description %></textarea>
            </div>
            <button type="submit" class="confirm-button">SALVAR ALTERAÇÕES</button>
        </form>
    </section>

